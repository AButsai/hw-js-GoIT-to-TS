{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		// "outDir": "./dist",
		// "rootDir": "./src",
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"lib": ["es2017", "dom"],
		"sourceMap": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_module"],
	"ts-node": {
		"esm": true
	}
}
